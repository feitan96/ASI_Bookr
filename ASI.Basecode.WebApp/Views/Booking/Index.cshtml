    <div class="mt-sm-4">
        <button style="background-color: var(--color2); color:var(--color1); border:none;" class="btn btn-primary mb-2" onclick="openModal('@Url.Action("Create", "Booking")', 'crudModal1')">
            <svg style="fill:var(--color1); width: 18px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM232 344l0-64-64 0c-13.3 0-24-10.7-24-24s10.7-24 24-24l64 0 0-64c0-13.3 10.7-24 24-24s24 10.7 24 24l0 64 64 0c13.3 0 24 10.7 24 24s-10.7 24-24 24l-64 0 0 64c0 13.3-10.7 24-24 24s-24-10.7-24-24z" /></svg>
