            </select>
        </div>

        <!-- Booking Date Picker-->
        <div class="d-flex flex-row align-content-around">
            <div class="mr-1">
                <input type="text" id="bookingDate" class="form-control" placeholder="Booking Date" />
            </div>

            <!-- Check-in Time Picker -->
