<body style="background: -webkit-linear-gradient(180deg, #E9E9E9, #FFFFFF); background: linear-gradient(180deg, #E9E9E9, #FFFFFF);">
    <h3>Booking Management</h3>

    <div class="d-flex flex-row align-content-between">
        <!-- Search Textbox -->
        <div class="mr-1">
            <input type="text" id="searchTextBox" class="form-control" placeholder="Search by ID/User First/Last Name" />
        </div>

        <!-- Search By Dropdown-->

        <div class="mr-4">
            <select id="searchByFilter" class="form-control pl-1">
