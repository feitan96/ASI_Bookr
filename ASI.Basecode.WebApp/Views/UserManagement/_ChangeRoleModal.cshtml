@model ASI.Basecode.Services.ServiceModels.UserViewModel

<div class="modal-header">
    <h5 class="modal-title" id="roleModalLabel">
        Change Role for @Model.FirstName @Model.LastName
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <p>Are you sure you want to change the role of <strong>@Model.FirstName @Model.LastName</strong> to <strong>@(Model.Role == "User" ? "Admin" : "User")</strong>?</p>
    <form id="changeRoleForm" method="post" action="@Url.Action(Model.Role == "User" ? "Promote" : "Demote", "UserManagement")">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">
                Confirm
            </button>
        </div>
    </form>
</div>
