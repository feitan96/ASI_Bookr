@model ASI.Basecode.Services.ServiceModels.UserViewModel

    <h6>Are you sure you want to change the role of <strong>@Model.FirstName @Model.LastName</strong> to <strong>@(Model.Role == "User" ? "Admin" : "User")</strong>?</h6>
    <form id="changeRoleForm" method="post" action="@Url.Action(Model.Role == "User" ? "Promote" : "Demote", "UserManagement")">
        <input type="hidden" name="id" value="@Model.Id" />


        <div class="d-flex justify-content-end">
            <button type="button" class="btn cancel-modal mr-2" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn submit-modal">
                Confirm
            </button>
        </div>
    </form>
