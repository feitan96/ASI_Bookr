@model ASI.Basecode.Services.ServiceModels.BookingViewModel


@{
}

<div class="modal-header">
    <h3 class="modal-title">Approve Booking</h3>
    <button type="button" class="close modal-close-btn" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div style="padding-top: 10px; padding-left: 15px;">
    <h5>Are you sure you want to cancel this booking? You can't revert after this action is done.</h5>
</div>

<div class="modal-body">
    <form id="cancelBookingForm" asp-action="CancelBooking" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Title" />
        <input type="hidden" asp-for="BookingId" />
        <input type="hidden" asp-for="RoomId" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="BookingStartDate" />
        <input type="hidden" asp-for="BookingEndDate" />
        <input type="hidden" asp-for="CheckInTimeString" />
        <input type="hidden" asp-for="CheckOutTimeString" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="ApproveDisapproveBy" />
        <input type="hidden" asp-for="IsRecurring" />
        <input type="hidden" asp-for="SelectedDays" />

        <!-- Submit Button -->
        <div class="form-group">
            <input type="submit" value="Confirm" class="btn btn-success" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>
