@model ASI.Basecode.Services.ServiceModels.BookingViewModel


<dl class="row">
    <dt class="col-sm-4 text-end">Room Name:</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.Room.Name)</dd>
    <!-- Room Details -->
    <dt class="col-sm-4 text-end">Booker:</dt>
    <dd class="col-sm-8">@($"{Model.User.FirstName} {Model.User.LastName}")</dd>

    <dt class="col-sm-4 text-end">Meeting Title:</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

    <dt class="col-sm-4 text-end">Start Date:</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.FormattedBookingStartDate)</dd>

    <dt class="col-sm-4 text-end">End Date:</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.FormattedBookingEndDate)</dd>

    <!-- User Details -->
    <dt class="col-sm-4 text-end">Status:</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

    <dt class="col-sm-4 text-end">Check In:</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckInTimeString)</dd>

    <dt class="col-sm-4 text-end">Check Out:</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckOutTimeString)</dd>

    <dt class="col-sm-4 text-end">Is Recurring:</dt>
    <dd class="col-sm-8">@(Model.IsRecurring ? "Yes" : "No")</dd>

    @if (Model.IsRecurring)
    {
        <dt class="col-sm-4 text-end">Selected Days:</dt>
        <dd class="col-sm-8">@string.Join(", ", Model.RecurringBookings.Select(x => x.Day).ToList())</dd>
    }
</dl>

