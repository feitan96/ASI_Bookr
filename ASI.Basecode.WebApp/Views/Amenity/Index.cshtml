@model IEnumerable<ASI.Basecode.Services.ServiceModels.AmenityViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Room Amenities Management</h1>

<p>
    <button class="btn btn-primary mb-3" onclick="openModal('@Url.Action("Create", "Amenity")')">Add New Amenity</button>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AmenityName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var amenity in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => amenity.AmenityName)</td>

                <td>
                    <button onclick="openModal('@Url.Action("Edit", "Amenity", new { amenityId  = amenity.AmenityId })')" class="btn btn-warning btn-sm">Edit</button>
                    <button onclick="openModal('@Url.Action("Delete", "Amenity", new { amenityId = amenity.AmenityId })')" class="btn btn-danger btn-sm">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div id="crudModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Open modal and load content
        function openModal(url) {
            $.get(url, function (data) {
                $('#crudModal .modal-body').html(data);
                $('#crudModal').modal('show');

                // Initialize client-side validation
                $.validator.unobtrusive.parse('#crudModal .modal-body');
            });
        }

        // Handle form submission within modal
        $(document).on('submit', 'form', function (e) {
            e.preventDefault();
            var form = $(this);
            var formData = new FormData(this);

            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    $('#crudModal').modal('hide');
                    location.reload(); // Reload page or update data to reflect changes
                },
                error: function (xhr) {
                    if (xhr.status === 400) { // Bad request due to validation
                        $('#crudModal .modal-body').html(xhr.responseText);
                        $.validator.unobtrusive.parse('#crudModal .modal-body'); // Re-parse validation for new content
                    } else {
                        alert('An error occurred. Please try again.');
                    }
                }
            });
        });
    </script>
}

