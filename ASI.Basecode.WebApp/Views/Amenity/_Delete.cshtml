@model ASI.Basecode.Services.ServiceModels.AmenityViewModel

<h6>Are you sure you want to delete this amenity?</h6>
<div>
    <b>Name:</b> @Html.DisplayFor(model => model.AmenityName)

    <div class="d-flex justify-content-end pt-4">
        <form asp-action="HardDelete">
            <input type="hidden" asp-for="AmenityId" />
            <button type="button" class="btn mr-2 cancel-modal" onclick="closeModal()">Cancel</button>
            <input type="submit" value="Delete" class="btn submit-modal" />
        </form>
    </div>
</div>