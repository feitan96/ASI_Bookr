@model ASI.Basecode.Services.ServiceModels.DashboardViewModel
@using System.Security.Claims
@{
    ViewBag.Title = "Dashboard";
}

<div class="dashboard-banner">
    <div class="banner-content">
        <div class="welcome-container">
            <div>
                <span class="welcome-text">Welcome</span>
                <span class="user-name">, @User.FindFirst(ClaimTypes.Name)?.Value!</span>
            </div>
        </div>
        <div class="schedule-container">
            <div class="schedule-text">
                <div>Ready to dive into today's schedule? </div>
            </div>
        </div>
        <form asp-controller="Dashboard" asp-action="Index" method="get" class="mb-3">
            <div class="form-group">
                <label for="selectedDate">Select Date:</label>
                <input type="date" id="selectedDate" name="selectedDate"
                       value="@Model.CurrentDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
        </form>
    </div>
    <div class="banner-image">
        <img class="welcome-img" src="~/img/fotor-ai-2024092719426-removebg-preview 5.svg" />
    </div>
</div>

<div class="row">
    <!-- Today's Bookings Table -->
    <div class="col-md-8 mt-xl-5">
        <h4>Bookings on @Model.CurrentDate.ToString("MMMM dd, yyyy")</h4>
        @if (Model.TodayBookings.Any())
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th hidden>Booking ID</th>
                        <th>Room Name</th>
                        <th>User Name</th>
                        <th>Check-In Time</th>
                        <th>Check-Out Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.TodayBookings)
                    {
                        <tr>
                            <td hidden>@booking.BookingId</td>
                            <td>@booking.RoomName</td>
                            <td>@booking.UserFullName</td>
                            <td>@booking.CheckInTime</td>
                            <td>@booking.CheckOutTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No bookings for the selected date.</p>
        }
    </div>

    <!-- Room Usage Statistics Table -->
    <div class="col-md-4 mt-xl-5">
        <h4>Room Usage Statistics</h4>
        @if (Model.RoomUsageStatistics.Any())
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Room Name</th>
                        <th>Booking Frequency</th>
                        <th>Total Usage Hours</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.RoomUsageStatistics)
                    {
                        <tr>
                            <td>@room.RoomName</td>
                            <td>@room.BookingFrequency</td>
                            <td>@room.TotalUsageHours.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No room usage statistics for the selected date.</p>
        }
    </div>
</div>

<style>
    .dashboard-banner {
        width: 100%;
        height: 100%;
        background: linear-gradient(164deg, white 0%, #FFE380 49%, #FEC601 100%);
        border-radius: 15px;
        justify-content: space-between;
        align-items: flex-end;
        display: inline-flex;
        margin-top: 110px;
    }

    .banner-content {
        width: 1083px;
        padding: 24px 30px 24px 24px;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        display: inline-flex;
    }

    .welcome-container {
        align-self: stretch;
        padding: 0 10px;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 10px;
        display: inline-flex;
    }

    .welcome-text {
        color: #820000;
        font-size: 64px;
        font-family: Inter;
        font-weight: 700;
        line-height: 100px;
        word-wrap: break-word;
    }

    .user-name {
        color: black;
        font-size: 64px;
        font-family: Inter;
        font-weight: 700;
        line-height: 100px;
        word-wrap: break-word;
    }

    .schedule-container {
        align-self: stretch;
        padding: 10px;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 10px;
        display: inline-flex;
    }

    .schedule-text {
        justify-content: center;
        align-items: center;
        display: flex;
        color: black;
        font-size: 24px;
        font-family: Inter;
        font-weight: 500;
        line-height: 60px;
        word-wrap: break-word;
    }

    .banner-image {
        width: 491px;
        height: 300px;
        transform: translate(-10%, -64%);
    }

    .welcome-img {
        height: 500px;
        padding: 10px;
    }
</style>

@section Scripts {
    <script>
        document.getElementById("selectedDate").addEventListener("change", function () {
            this.form.submit();
        });
    </script>
}