<!-- Modal -->
<div id="editProfileModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body-container">
                <div class="modal-body">
                    <!-- Content will be loaded here via AJAX -->
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-container{
        border-radius: 10px;
        background-color: white;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
</style>

@section Scripts {
    <script>
        // Function to open the modal and load form content
        function openEditModal(userId) {
            $.get('@Url.Action("Edit", "Profile")', { Id: userId }, function (data) {
                $('#editProfileModal .modal-body').html(data);
                $('#editProfileModal').modal('show');
                // Reapply unobtrusive validation after modal content is loaded
                $.validator.unobtrusive.parse('#editProfileModal .modal-body');
            });
        }

        // Handle form submission within the modal
        $(document).on('submit', '#editProfileForm', function (e) {
            e.preventDefault();
            var form = $(this);
            var formData = new FormData(this);

            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success === false) {
                        toastr.error(response.errorMessage);
                        return false; // Keep the modal open
                    } else {
                        $('#editProfileModal').modal('hide');
                        toastr.success(response.successMessage);

                        location.reload();
                        $.get('@Url.Action("Index", "Profile")', function (data) {
                            $('.card-body').html($(data).find('.card-body').html());
                        });
                    }
                },
                error: function (xhr) {
                        toastr.error('An error occurred. Please try again.');
                }
            });
        });

        function closeModal() {
            $('#crudModal').modal('hide'); // Using string interpolation
        }
    </script>
}


