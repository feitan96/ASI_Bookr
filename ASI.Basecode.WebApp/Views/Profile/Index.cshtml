@model ASI.Basecode.Services.ServiceModels.ProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

@if (Model == null)
{
    <p>User not found.</p>
}
else
{
    <h1>@ViewData["Title"]</h1> 

    <div class="card">
        @* <div class="card-header">
            <h5>User Profile</h5>
        </div> *@
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>First Name:</strong> @Model.FirstName</p>
                    <p><strong>Last Name:</strong> @Model.LastName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Allow Notifications:</strong> @(Model.AllowNotifications ? "Yes" : "No")</p>
                    <p><strong>Dark Mode:</strong> @(Model.IsDarkMode ? "Enabled" : "Disabled")</p>
                    <p><strong>Default Booking Duration:</strong> @Model.DefaultBookDuration hours</p>
                </div>
            </div>
            <button class="btn btn-primary" onclick="openEditModal('@Url.Action("Edit", "Profile", new { Id = Model.Id })')">Edit Profile</button>
        </div>
    </div>
}


<!-- Modal -->
<div id="editProfileModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Function to open the modal and load form content
        function openEditModal(userId) {
            $.get('@Url.Action("Edit", "Profile")', { Id: userId }, function (data) {
                $('#editProfileModal .modal-body').html(data);
                $('#editProfileModal').modal('show');
                // Reapply unobtrusive validation after modal content is loaded
                $.validator.unobtrusive.parse('#editProfileModal .modal-body');
            });
        }

        // Handle form submission within the modal
        $(document).on('submit', '#editProfileForm', function (e) {
            e.preventDefault();
            var form = $(this);
            var formData = new FormData(this);

            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success === false) {
                        toastr.error(response.errorMessage);
                        return false; // Keep the modal open
                    } else {
                        $('#editProfileModal').modal('hide');
                        toastr.success(response.successMessage);

                        // location.reload();
                        $.get('@Url.Action("Index", "Profile")', function (data) {
                            $('.card-body').html($(data).find('.card-body').html());
                        });
                    }
                },
                error: function (xhr) {
                        toastr.error('An error occurred. Please try again.');
                }
            });
        });
    </script>
}


