                    @Html.DisplayFor(modelItem => room.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => room.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => room.Location)
                </td>
                @* <td>
            <img src="@item.ImageUrl" alt="Image" width="100" height="100" />
            </td> *@
