@using ASI.Basecode.Services.ServiceModels;
@model ASI.Basecode.Services.ServiceModels.RoomViewModel

@{
    ViewData["Title"] = "Edit Room";
    var amenities = ViewData["AmenitiesList"] as List<AmenityViewModel> ?? new List<AmenityViewModel>();
    

}

<h1>Edit Room</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter room name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter room description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="">Select Room Type</option>
                    <option value="MeetingRoom">MeetingRoom (Has TV)</option>
                    <option value="PrivateRoom">PrivateRoom (Personal space for any work)</option>
                    <option value="StudyRoom">StudyRoom (Designed for studying)</option>
                    <option value="ConferenceRoom">ConferenceRoom (Has TV and whiteboard)</option>
                    <option value="WorkshopRoom">WorkshopRoom (Has whiteboard only)</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" placeholder="Enter room capacity" type="number" min="1" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control">
                    <option value="">Select Room Location</option>
                    <option value="FocusRoom">FocusRoom (Dedicated space for quiet work and concentration)</option>
                    <option value="Lounge">Lounge (Casual area for relaxation and informal meetings)</option>
                    <option value="InnovationLab">InnovationLab (Room designed for brainstorming and project development)</option>
                    <option value="ResourceCenter">ResourceCenter (Equipped with tools and materials for research and study)</option>
                </select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomAmenitiesId" class="control-label">Select Amenities</label>
                <div>
                    @foreach (var amenity in amenities)
                    {
                        <input type="checkbox" name="RoomAmenitiesId" value="@amenity.AmenityId"
                        @(Model.RoomAmenitiesId.Contains(amenity.AmenityId) ? "checked" : "") />
                        <label>@amenity.AmenityName</label>

                        <br />
                    }
                </div>
                <span asp-validation-for="RoomAmenitiesId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
