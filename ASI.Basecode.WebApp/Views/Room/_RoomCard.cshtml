@model ASI.Basecode.Services.ServiceModels.RoomViewModel
@section styles {
    <link rel="stylesheet" href="~/css/roomcard.css" />
}
<div class="card room-card">
    <div class="card-header p-0">
        <!-- Room Images Carousel -->
        <div id="roomCardCarousel_@Model.RoomId" class="carousel slide" data-ride="carousel" style="max-width: 100%; height: 200px; overflow: hidden;">
            <div class="carousel-inner">
                @if (Model.Images != null && Model.Images.Count > 0)
                {
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        var image = Model.Images[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@Url.Content($"~/uploads/rooms/{image.Guid}")"
                                 class="d-block w-100 object-fit-cover"
                                 alt="Room Image"
                                 style="height: 200px;">
                        </div>
                    }
                }
                else
                {
                    <!-- Fallback image if no images are available -->
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/images/default-room.jpg")"
                             class="d-block w-100 object-fit-cover"
                             alt="Default Room Image"
                             style="height: 200px;">
                    </div>
                }
            </div>
            <!-- Carousel Controls -->
            <a class="carousel-control-prev" href="#roomCardCarousel_@Model.RoomId" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#roomCardCarousel_@Model.RoomId" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <ul class="list-unstyled mb-3">
            <li><strong>Type:</strong> @Model.Type</li>
            <li><strong>Capacity:</strong> @Model.Capacity</li>
            <li><strong>Location:</strong> @Model.Location</li>
        </ul>
        <a href="@Url.Action("Details", "Room", new { id = Model.RoomId })" class="btn btn-primary">View Details</a>
    </div>
</div>
