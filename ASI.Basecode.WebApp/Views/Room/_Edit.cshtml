@using ASI.Basecode.Services.ServiceModels;
@model ASI.Basecode.Services.ServiceModels.RoomViewModel

@{
    var amenities = ViewData["AmenitiesList"] as List<AmenityViewModel> ?? new List<AmenityViewModel>();   
}

<div class="modal-header">
    <h5 class="modal-title">Edit Room</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RoomId" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter room name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter room description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <select asp-for="Type" class="form-control">
                <option value="">Select Room Type</option>
                <option value="MeetingRoom">Meeting Room (Has TV)</option>
                <option value="PrivateRoom">Private Room (Personal space for any work)</option>
                <option value="StudyRoom">Study Room (Designed for studying)</option>
                <option value="ConferenceRoom">Conference Room (Has TV and whiteboard)</option>
                <option value="WorkshopRoom">Workshop Room (Has whiteboard only)</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Capacity" class="control-label"></label>
            <input asp-for="Capacity" class="form-control" placeholder="Enter room capacity" type="number" min="1" max="20"/>
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location" class="control-label"></label>
            <select asp-for="Location" class="form-control">
                <option value="">Select Room Location</option>
                <option value="FocusRoom">Focus Room (Dedicated space for quiet work and concentration)</option>
                <option value="Lounge">Lounge (Casual area for relaxation and informal meetings)</option>
                <option value="InnovationLab">Innovation Lab (Room designed for brainstorming and project development)</option>
                <option value="ResourceCenter">Resource Center (Equipped with tools and materials for research and study)</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageFiles" class="control-label">Upload Room Image/s</label>
            <input type="file" asp-for="ImageFiles" class="form-control" accept=".jpeg,.jpg,.png" multiple />
            <span asp-validation-for="ImageFiles" class="text-danger"></span>
        </div>

        @if (Model.Images != null && Model.Images.Count > 0)
        {
            <div class="form-group w-100">
                <label>Existing Image/s</label>
                <div class="text-left">
                    <div id="roomImagesCarousel" class="carousel slide mx-auto" data-ride="carousel" style="max-width: 600px;">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Images.Count; i++)
                            {
                                var image = Model.Images[i];
                                <div class="carousel-item @(i == 0 ? "active" : "") text-left">
                                    <div class="d-flex justify-content-center">
                                        <img src="@Url.Content($"~/uploads/rooms/{image.Guid}")"
                                             class="object-fit-cover rounded"
                                             alt="Room Image"
                                             style="width: 200px; height: 200px;" />
                                    </div>
                                    <div class="mt-3">
                                        <button type="button" class="btn btn-danger btn-sm delete-image-btn"
                                                data-image-id="@image.ImageId" data-image-guid="@image.Guid">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- Carousel controls -->
                        <a class="carousel-control-prev" href="#roomImagesCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#roomImagesCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <label asp-for="RoomAmenitiesId" class="control-label">Select Amenities</label>
            <select asp-for="RoomAmenitiesId" class="form-control chosen-select" multiple>
                @foreach (var amenity in amenities)
                {
                    <option value="@amenity.AmenityId">@amenity.AmenityName</option>
                }
            </select>
            <span asp-validation-for="RoomAmenitiesId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }

    </script>
}
